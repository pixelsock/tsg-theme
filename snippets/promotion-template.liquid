<product-card class="product-card" reveal-on-scroll="true" style="opacity: 1; transform: translateY(0px);">
  <div class="product-card__figure">
    <a
      {% if section.settings.promotion_link_url %}
        href="{{ section.settings.promotion_link_url }}"
      {% endif %}
      class="product-card__media"
      data-instant=""
    >
      {{-
        section.settings.promotion_image_url
        | image_url: width: product.featured_media.width
        | image_tag: loading: 'lazy', alt: product.featured_media.alt
      -}}
    </a>
  </div>
</product-card>
